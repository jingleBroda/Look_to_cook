<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RememberAndroid" parent="Theme.AppCompat.DayNight">
        <!-- Theme.MaterialComponents.DayNight.DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_logo_look_to_cook_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/ic_logo_look_to_cook_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/AppDefaultButtonsStyle</item>
    </style>

    <style name="AppDefaultButtonsStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

</resources>